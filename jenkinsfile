pipeline {
    agent any

    stages {
        stage ('Compile Stage') {

            steps {
                withMaven(jdk: 'JDK', maven: 'Maven', tempBinDir: '') {
                    sh 'mvn clean compile'
                }
            }
        }

        stage ('Testing Stage') {

            steps {
                withMaven(jdk: 'JDK', maven: 'Maven', tempBinDir: '') {
                    sh 'mvn test'
                }
            }
        }


        stage ('Deployment Stage') {
            steps {
                withMaven(jdk: 'JDK', maven: 'Maven', tempBinDir: ''){
                    sh 'mvn deploy'
                }
            }
        }
    }
}
