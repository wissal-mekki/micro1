pipeline {
    agent any

    stages {
        stage ('Compile Stage') {

            steps {
                withMaven(maven: 'Maven', tempBinDir: '') {
                    sh 'mvn clean compile'
                }
            }
        }

        stage ('Testing Stage') {

            steps {
                withMaven(maven: 'Maven', tempBinDir: '') {
                    sh 'mvn test'
                }
            }
        }


        stage ('Deployment Stage') {
            steps {
               sh  'docker build -f Dockerfile -t  micro1 .'
                    sh 'docker run -p 8085:8085 micro1'
            }
        }
    }
}
