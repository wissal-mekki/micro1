pipeline {
    agent any

    stages {
        stage ('Compile Stage') {

            steps {
                withMaven(maven: 'Maven') {
                    sh 'mvn clean  install'
                }
            }
        }

        stage ('Testing Stage') {

            steps {
                withMaven(maven: 'Maven') {
                    sh 'mvn test'
                }
            }
        }


        stage ('Deployment Stage') {
            steps {
               sh  'docker build -t  micro1-jenk .'
                    sh 'docker run -p 8085:8085 micro1-jenk'
            }
        }
    }
}
